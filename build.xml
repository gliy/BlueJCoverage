<project name="Example Build Script" basedir="." default="build-jar">
	<!--  Load properties  -->
	<property file="build.properties" />
	<property name="bluej.path" value="F:\Users\Ian\Documents\BluejTest\BlueJ"/>
    <property name="bluej.lib" value="${bluej.path}\lib"/>

    <property name="blue.extension.dest" value="${bluej.lib}\extensions"/>

	
	<property name="build.dir" value="build" />
	<property name="src.dir" value="src" />
	<path id="class.path">

		<pathelement location="bin"/>
		<fileset dir="lib" includes="*.jar"/>
		<pathelement location="${bluej.lib}/bluejext.jar"/>
	</path>

	<property name="lib.dir" value="lib" />
	<target name="-init" depends="clean">

		<mkdir dir="${build.dir}" />
	</target>
	<target name="clean" description="Clean up">

		<delete dir="${build.dir}" />
	</target>
	<target name="build" depends="-init" description="Build project">

		<copy todir="${build.dir}">
			<fileset dir="${src.dir}" />
			<fileset dir="${lib.dir}" />
		</copy>
		<javac debug="true" debuglevel="lines,vars,source" destdir="${build.dir}" srcdir="${src.dir}"
		    source = "1.6"
		    target = "1.6">
			<classpath refid="class.path"/>
		</javac>
	</target>
	<target name="build-jar" depends="build">
      <jar destfile="${blue.extension.dest}/AttacherExtension.jar"
        basedir="${build.dir}"
        includes="**"
      manifest="MANIFEST.MF"
      
      >

      </jar>
<!--  jvmargs="-Xdebug -Xrunjdwp:server=y,transport=dt_socket,address=4000,suspend=n" -->
      	<java jar="F:\Users\Ian\Documents\BluejTest\BlueJ\lib\bluej.jar"
		jvm="F:\Program Files\Java\jdk1.7.0_40\bin\java.exe" fork="true" >

	</java>
	</target>
</project>